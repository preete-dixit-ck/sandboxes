{
  "variables": {
    "box_basename": "advanced",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "iso_checksum": "907e5755f824c5848b9c8efbb484f3cd945e93faa024bad6ba875226f9683b16",
    "iso_checksum_type": "sha256",
    "iso_name": "CentOS-7-x86_64-DVD-1511.iso",
    "ks_path": "http/advanced-ks.cfg"
  },
  "builders": [
    {
      "type": "vmware-iso",
      "vm_name": "{{ user `box_basename` }}",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 16384,
      "guest_os_type": "centos-64",
      "headless": true,
      "http_directory": ".",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "iso/{{user `iso_name`}}",
      "output_directory": "packer-{{user `build_timestamp`}}-vmware",
      "shutdown_command": "echo {{user `ssh_password`}} | sudo -S /sbin/halt -h -p",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "1800s",
      "tools_upload_flavor": "linux",
      "vmx_data": {
        "cpuid.coresPerSocket": 1,
        "memsize": 512,
        "numvcpus": 1
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "pause_before": "10s",
      "execute_command": "echo {{user `ssh_password`}} | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "inline": [
        "yum -y update",
        "reboot"
      ]
    },
    {
      "type": "file",
      "source": "files/vmware-tools-linux.gz",
      "destination": "/tmp/vmware-tools-linux.gz"
    },
    {
      "type": "file",
      "source": "files/tmp.mount",
      "destination": "/tmp/tmp.mount"
    },
    {
      "type": "file",
      "source": "files/yum.conf",
      "destination": "/tmp/yum.conf"
    },
    {
      "type": "file",
      "source": "files/limits.conf",
      "destination": "/tmp/limits.conf"
    },
    {
      "type": "file",
      "source": "files/sysctl.conf",
      "destination": "/tmp/sysctl.conf"
    },
    {
      "type": "file",
      "source": "files/issue",
      "destination": "/tmp/issue"
    },
    {
      "type": "file",
      "source": "files/ntp.conf",
      "destination": "/tmp/ntp.conf"
    },
    {
      "type": "file",
      "source": "files/ntpd",
      "destination": "/tmp/ntpd"
    },
    {
      "type": "file",
      "source": "files/cis-benchmark-centos-7.yml",
      "destination": "/tmp/cis-benchmark-centos-7.yml"
    },
    {
      "type": "file",
      "source": "scripts/system-audit.py",
      "destination": "/tmp/system-audit.py"
    },
    {
      "type": "shell",
      "execute_command": "echo {{user `ssh_password`}} | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "inline": [ "sleep 60" ]
    },
    {
      "type": "shell",
      "environment_vars": [
        "HOME_DIR=/home/vagrant"
      ],
      "execute_command": "echo {{user `ssh_password`}} | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "scripts": [
        "provisioning-scripts/install-extra-packages-for-enterprise-linux.sh",
        "provisioning-scripts/install-linux-tools.sh",
        "provisioning-scripts/configure-vagrant-user.sh",
        "provisioning-scripts/configure-sshd-options.sh",
        "provisioning-scripts/install-vmtools.sh",
        "hardening-scripts/configure-disk-partitions.sh",
        "hardening-scripts/configure-yum.sh",
        "hardening-scripts/configure-secure-boot.sh",
        "hardening-scripts/configure-kernel-parameters.sh",
        "hardening-scripts/install-issue.sh",
        "hardening-scripts/install-ntp.sh",
        "hardening-scripts/configure-ntp.sh",
        "hardening-scripts/install-aide.sh",
        "hardening-scripts/configure-aide.sh",
        "hardening-scripts/prevent-usb-mount.sh",
        "hardening-scripts/enable-secure-password-policy.sh",
        "hardening-scripts/disable-unused-filesystems.sh",
        "hardening-scripts/disable-uncommon-network-protocols.sh",
        "hardening-scripts/bulk-configure-services.sh",
        "hardening-scripts/bulk-remove-services.sh",
        "hardening-scripts/install-system-audit-script.sh",
        "hardening-scripts/install-syslog-ng.sh",
        "provisioning-scripts/clean-up.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "builds/{{user `box_basename`}}.{{.Provider}}.box"
    }
  ]
}
